      <% end %>
    </div>
  <% end %>
  <div class="col-auto text-center mt-5">
    <h4 class="text-center my-5">Would you like to pick another report?</h4>
    <%= link_to "Next Task", reports_path, class: "col-3 btn btn-primary rounded-pill btn-lg text-center" %>
  </div>
